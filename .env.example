# =============================================================================
# Aiba Arena Backend Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env file to version control

# =============================================================================
# Application Configuration
# =============================================================================
# Environment: development, test, production
APP_ENV=development
NODE_ENV=development
PORT=5000

# =============================================================================
# Database Configuration
# =============================================================================
# MongoDB connection URI
MONGO_URI=mongodb://localhost:27017/aiba-arena

# =============================================================================
# Security Configuration
# =============================================================================
# JWT secret for admin authentication (must be strong in production)
ADMIN_JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Admin password hash (use: node scripts/hash-admin-password.js "your-password")
ADMIN_PASSWORD_HASH=your-hashed-password-here

# Battle seed secret for deterministic randomness (must be >= 32 chars)
BATTLE_SEED_SECRET=your-battle-seed-secret-minimum-32-chars

# Telegram integration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_INITDATA_MAX_AGE_SECONDS=900

# CORS configuration
CORS_ORIGIN=http://localhost:3000

# =============================================================================
# TON Blockchain Configuration
# =============================================================================
# TON provider URL (mainnet or testnet)
TON_PROVIDER_URL=https://toncenter.com/api/v2/jsonRPC
TON_API_KEY=your-toncenter-api-key

# Admin wallet configuration
ADMIN_WALLET=your-admin-wallet-address
ADMIN_SIGNER_TYPE=mnemonic
ADMIN_MNEMONIC="your twelve word mnemonic phrase here"
ADMIN_JETTON_WALLET=your-admin-jetton-wallet-address

# =============================================================================
# Vault & Reward System Configuration
# =============================================================================
# Set all vault-related variables together or leave all empty
ARENA_VAULT_ADDRESS=your-arena-vault-address
AIBA_JETTON_MASTER=your-aiba-jetton-master-address

# Oracle configuration (choose one)
ORACLE_PRIVATE_KEY_HEX=your-32-byte-hex-private-key
# ORACLE_SIGNER_URL=http://localhost:8080/sign
# ORACLE_SIGNER_TOKEN=your-oracle-signer-token

# =============================================================================
# Rate Limiting Configuration
# =============================================================================
RATE_LIMIT_PER_MINUTE=600

# =============================================================================
# Redis Configuration (Optional - for distributed rate limiting)
# =============================================================================
# REDIS_URL=redis://localhost:6379

# =============================================================================
# Third-party Services Configuration
# =============================================================================
# Oracle update interval in minutes
ORACLE_UPDATE_INTERVAL_MINUTES=15

# =============================================================================
# Donation Wallets Configuration
# =============================================================================
# Configure only if accepting donations
DONATE_BROKER_WALLET=
DONATE_CAR_WALLET=
DONATE_BIKE_WALLET=
DONATE_GIFTS_WALLET=
GIFTS_WALLET=

# =============================================================================
# Legacy Configuration (DISABLE IN PRODUCTION)
# =============================================================================
# Legacy auto-dispatch - KEEP DISABLED IN PRODUCTION
ENABLE_LEGACY_PENDING_AIBA_DISPATCH=false

# =============================================================================
# Development/Testing Configuration
# =============================================================================
# Only for development environments
# ADMIN_PASSWORD=dev-password
# TON_PROVIDER_URL=https://testnet.toncenter.com/api/v2/jsonRPC
